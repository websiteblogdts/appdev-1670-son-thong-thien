@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<h1 style="color: #ffff;">Reset Password</h1>

<div class="row">
    <div class="col-md-4">
        <form id="resetPasswordForm" asp-action="ResetPassword" asp-route-returnUrl="@(Model?.ReturnUrl)" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" style="border-color: #33cc33; color: #ffcc66; background-color: #ffffff;" />
                <label asp-for="Email" class="form-label text-dark"></label>
                <span asp-validation-for="Email" class="text-danger" style="color: #ffcc66;"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" style="border-color: #66ccff; color: #ff9900; background-color: #ffffff;" />
                <label asp-for="Password" class="form-label text-dark" style="color: #ffffff;"></label>
                <span asp-validation-for="Password" class="text-danger" style="color: #ff9900;"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" style="border-color: #ff9900; color: #33cc33; background-color: #ffffff;" />
                <label asp-for="ConfirmPassword" class="form-label text-dark" style="color: #ffffff;"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger" style="color: #33cc33;"></span>
            </div>
            <button id="resetPasswordSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #ffcc66; color: #ffffff;">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
